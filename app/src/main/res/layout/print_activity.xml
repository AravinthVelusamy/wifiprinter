<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_overview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context="de.httptandooripalace.restaurantorderprinter.PrintActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/print_table_number"
            android:padding="16dp"
            android:textSize="20sp"
            android:text="Total"
            android:visibility="gone"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listingLayout"

            >
        </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"

        >

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_menu_delete"
            android:id="@+id/floatingActionButton2"
            android:layout_margin="12dp"
            android:onClick="deletePrintOverview"
            app:backgroundTint="@android:color/holo_red_dark"
            />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            app:srcCompat="@drawable/clipboard"
            android:layout_margin="12dp"
            android:id="@+id/btn_tax"
            android:text="Tax"
            android:onClick="printTaxBill"
            />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/printer"
            app:fabSize="mini"
            android:layout_margin="12dp"
            android:id="@+id/btn_bill"
            android:onClick="test"
            android:text="Bill"
            />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/printer"
            android:layout_margin="12dp"
            app:fabSize="mini"
            android:id="@+id/btn_kitchen"
            android:onClick="printBill"
            android:text="Kitchen"

            />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/printer"
            android:layout_margin="12dp"
            app:fabSize="mini"
            android:id="@+id/floatingActionButton4"
            android:onClick="printBill"
            android:text="Drinks"
            />

    </LinearLayout>


</RelativeLayout>
